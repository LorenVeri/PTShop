                        <h5><a href="#">Thuyền mạ vàng</a></h5>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="categories__item set-bg" data-setbg="https://belux.com.vn/wp-content/uploads/2020/07/BELUX-tranh-vinh-hoa-ma-vang-300x300.jpg">
                        <h5><a href="#">Tranh mạ vàng</a></h5>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="categories__item set-bg" data-setbg="https://belux.com.vn/wp-content/uploads/2021/12/tranh-hoa-h%E1%BB%93ng-%C4%91%E1%BA%B9p-qu%C3%A0-t%E1%BA%B7ng-300x300.jpg">
                        <h5><a href="#">Tranh vàng 24K</a></h5>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="categories__item set-bg" data-setbg="https://belux.com.vn/wp-content/uploads/2022/03/z3304729994503_d5f0296a03dc6c80581996b566c32c99-300x300.jpg">
                        <h5><a href="#">Sen vàng</a></h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Categories Section End -->

<!-- Featured Section Begin -->
<section class="featured spad" id="Product">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Sản phẩm nổi bật</h2>
                </div>
                <div class="featured__controls" style="display: none;">
                    <ul data-bind="foreach: $root.productList">
                        @*<li class="active">Tất cả sản phẩm</li>*@
                        <li data-bind="text: category.name"></li>
                    </ul>
                </div>
            </div>
        </div>
        <div data-bind="foreach: $root.productList" class="row featured__filter">
            <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
                <div class="featured__item">
                    <div>
                        <div class="product_hover" data-bind="foreach: productMedia">
                            <img class="product_img" data-bind="attr:{src: uri}"/>
                        </div>
                    </div>
                    <div class="featured__item__text">
                        <h6>
                            <a data-bind="attr: { href: '/chi-tiet/' + id() +'-' + $root.slugifyLink(name())}"  style="font-weight: 700;">
                                <span data-bind="text: name"></span>
                            </a>
                        </h6>
                        <div style="justify-content: center;width: 100%;display: flex">
                            <del style="font-size: 17px; opacity: 0.8; margin-right: 1rem;">
                                <h5 data-bind="text: $root.formatToVND(price)"></h5>
                            </del>
                            <div data-bind="foreach: productPrices">
                                <h5 data-bind="text: $root.formatToVND(price)"></h5>
                            </div>
                        </div>
                    </div>
                    <div class="design_hover">
                        <ul class="custom_hover">
                            <li><a data-bind="click: $root.addToFavorite" href="#"><i class="fa fa-heart"></i></a></li>
                            <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                            <li><a data-bind="click: $root.addToCart" href="#"><i class="fa fa-shopping-cart"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Featured Section End -->
<!-- Banner Begin -->
<div class="banner">
<div class="container">
    <div class="row" data-bind="foreach: $root.bannerList">
        <div class="col-lg-6 col-md-6 col-sm-6">
            <div class="banner__pic">
                <img data-bind="attr:{src: uri, attr: name}">
            </div>
        </div>
    </div>
</div>
<!-- Banner End -->

